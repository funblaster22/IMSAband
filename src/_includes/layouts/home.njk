---
layout: layouts/base.njk
templateClass: tmpl-home
---

<style>
  * {
    --color-text-main: white;
    color: white;
    text-shadow: 0 0 20px black;
  }

  button {
      border-radius: 3px;
      border: 1px solid white;
      background: transparent;
      box-shadow: 0 0 20px black;
      transition: background 500ms;
  }

  button:hover {
      background: white;
      color: black
  }

  .parallax-container {
    /* Full height */
    height: 100vh;
    width: 100vw;
    position: relative;

    perspective: 1px;
    /*perspective-origin: 0 0;*/
  }

  .parallax {
      position: absolute;
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
      transform: translateZ(-2px) scale(3);
      z-index: -1;

      /* Create the parallax scrolling effect */
      background-attachment: fixed;
      background-position: center;
      background-repeat: no-repeat;
      background-size: cover;
  }
</style>

<div class="wrapper home">
  <div class="content">
    {{ content | safe }}
    {%- for post in collections.posts -%}
      {% if (loop.index <= 3 and page.url != post.url) %}
        <div class="parallax-container perfect-center">
          <div style="text-align: center">
            <h1>{{ post.data.title }}</h1>
            <h3>{{ post.data.description }}</h3>
            <div>{{ post.data.page.date | htmlDateString }} &nbsp;&nbsp;&nbsp;&nbsp; <a href='{{ post.url | url }}'><button>Read More</button></a></div>
          </div>
          <div class="parallax" style="background-image: url('{{ post.data.hero | url }}')"></div>
        </div>
      {% endif %}
    {%- endfor -%}
  </div>
</div>


