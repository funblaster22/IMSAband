<div class="wrapper">
  {%- for post in collections.posts -%}
    {% if (loop.index <= 3 and page.url != post.url) %}
      <div class="parallax__group hero-container">
        <div class="parallax__layer sky" style="background-image: url('{{ post.data.hero | url }}')"></div>
        <div class="parallax__layer hero-text">
          <h1>{{ post.data.title }}</h1>
          <h3>{{ post.data.description }}</h3>
          <div>{{ post.data.page.date | htmlDateString }} &nbsp;&nbsp;&nbsp;&nbsp; <a href='{{ post.url | url }}'><button>Read More</button></a></div>
        </div>
      </div>
    {% endif %}
  {%- endfor -%}
</div>


